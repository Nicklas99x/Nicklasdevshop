<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui/etc/ui_configuration.xsd">
    <dataSource name="saleswatcher_dashboard_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Nicklas\SalesWatcher\Ui\DataProvider\OrderMonitorDataProvider</argument>
            <argument name="name" xsi:type="string">saleswatcher_dashboard_data_source</argument>
        </argument>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="columns">
        <column name="increment_id">
            <settings>
                <filter>text</filter>
                <label translate="true">Order ID</label>
            </settings>
        </column>
        <column name="status">
            <settings>
                <filter>text</filter>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Column">
            <settings>
                <label translate="true">Created At</label>
                <filter>dateRange</filter>
            </settings>
        </column>
    </columns>
</listing>